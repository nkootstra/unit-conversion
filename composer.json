{
    "name": "nkootstra/unit-conversion",
    "description": "Unit conversion",
    "keywords": [
        "nkootstra",
        "unit-conversion"
    ],
    "homepage": "https://github.com/nkootstra/unit-conversion",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Niels Kootstra",
            "email": "niels.kootstra@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
      "php": "^7.1",
      "haydenpierce/class-finder": "^0.4.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Nkootstra\\UnitConversion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nkootstra\\UnitConversion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
